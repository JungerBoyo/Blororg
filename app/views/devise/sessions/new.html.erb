<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row mb-3">
    <%= f.label :nick, class:"col-sm-2" %>
    <%= f.text_field :nick, autofocus: true, class:"col-sm-10", autocomplete: "nick", placeholder: "nick" %>
  </div>
  <div class="row mb-3">
    <%= f.label :email, class:"col-sm-2" %>
    <%= f.email_field :email, autofocus: true, class:"col-sm-10", autocomplete: "email", placeholder:"email@example" %>
  </div>
  <div class="row mb-3">
    <%= f.label :password , class:"col-sm-2" %>
    <%= f.password_field :password , autofocus: true, class:"col-sm-10", autocomplete: "password", placeholder:"******" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-check form-switch" style="text-align: right; display: flex; justify-content: flex-end">
      <%= f.label :remember_me, "ðŸ’¡", class:"form-check-label", style:"z-index: 9999" %>
      <%= f.check_box :remember_me, class:"form-check-input", role:"switch" %>
    </div>
  <% end %>

  <div class="btn-group" role="group">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "Sign up", new_registration_path(resource_name), class:"btn btn-outline-primary" %>
    <% end %>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class:"btn btn-info" %>
    <% end %>
    <%= f.submit "Log in", class:"btn btn-primary" %>
  </div>

<% end %>

