<br/> <br/>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <% if current_user.avatar.present? %>
    <div class="text-center">
      <%= image_tag current_user.avatar, class: "rounded-circle", style: "border: solid black;" %>
    </div>
  <% else %>
    <div class="text-center">
      <%= image_tag asset_path('default_avatar.jpg'), class: "rounded-circle", style: "border: solid black;" %>
    </div>
  <% end %>

  <br/>
  <br/>

  <div class="row mb-3">
    <%= f.label :avatar, class:"col-sm-2" %>
    <%= f.file_field :avatar, class:"col-sm-10" %>
  </div>

  <div class="row mb-3">
    <%= f.label :nick, class:"col-sm-2" %>
    <%= f.text_field :nick, autofocus: true, class:"col-sm-10" %>
  </div>

  <div class="row mb-3">
    <%= f.label :email, class:"col-sm-2" %>
    <%= f.email_field :email, class:"col-sm-10", autocomplete: "email" %>
  </div>


  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="row mb-3">
    <%= f.label :password, class:"col-sm-2" %>
    <%= f.password_field :password, class:"col-sm-10", autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="row mb-3">
    <%= f.label :password_confirmation, class:"col-sm-2" %>
    <%= f.password_field :password_confirmation, class:"col-sm-10", autocomplete: "new-password" %>
  </div>

  <div class="row mb-3">
    <%= f.label :current_password, class:"col-sm-2" %>
    <%= f.password_field :current_password, class:"col-sm-10", autocomplete: "current-password" %>
  </div>

  <div class="btn-group" role="group">
    <%= link_to "⬅️", :back, class:"btn btn-outline-primary" %>
    <%= f.submit "🔄", class:"btn btn-primary" %>
  </div>

  <%= button_to "💥" , registration_path(resource_name), data: { turbo_method: :delete, confirm: "u sure?" }, method: :delete, class:"btn btn-danger" %>
<% end %>

