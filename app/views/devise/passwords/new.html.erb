<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row mb-3">
    <%= f.label :email, class:"col-sm-2" %>
    <%= f.email_field :email, autofocus: true, class:"col-sm-10", autocomplete: "email", placeholder: "email@example" %>
  </div>

  <div class="btn-group" role="group">
    <%= link_to "Log in", new_session_path(resource_name), class:"btn btn-primary" %><br />
    <%= link_to "Sign up", new_registration_path(resource_name), class:"btn btn-primary"  %><br />
    <%= f.submit "Send me reset password instructions", class:"btn btn-warning" %>
  </div>
<% end %>

